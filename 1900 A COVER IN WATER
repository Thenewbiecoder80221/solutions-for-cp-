#include<bits/stdc++.h>
using namespace std;
int main(){
    int t;
    cin>>t;
    while(t--){
        int n;
        cin>>n;
        string s;
        cin>>s;bool flag=false;
        int count=0;
        for(int i=2;i<n;i++){
            if(s[i-2]=='.' && s[i-1]=='.'&& s[i]=='.'){
                flag=true;

               

            } }
            if(flag==true){
                cout<<2<<endl;
                continue;
            }
           
      
        for(int j=0;j<n;j++){
                 if(s[j]=='.'){
                    count++; }
            
        }
         cout<<count<<endl;  
               

            
            
       
        }
        
        
    }
