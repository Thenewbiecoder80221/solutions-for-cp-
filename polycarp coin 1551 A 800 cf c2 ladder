#include<bits/stdc++.h>
using namespace std;
int main(){
    int t;
    cin>>t;
    while(t--){
        int n;
        cin>>n;
        int c1,c2;
        if(n%3==0){
            c1=n/3;
            c2=n/3;
        }
        if(n%3==1){
            c2=n/3;
            c1=c2+1;
        }
        if(n%3==2){
            c1=n/3;
            c2=c1+1;
        }
        cout<<c1<<" "<<c2<<endl;


    }
}
