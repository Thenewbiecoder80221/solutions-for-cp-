#include<bits/stdc++.h>
using namespace std;
int main(){
    int t;
    cin>>t;
    while(t--){
        int n;
        cin>>n;
        int sum;
        sum=0;
        vector<int> a(n);
        int size;
        for(int i=0;i<n;i++){
            cin>>a[i];
            sum=sum+a[i];
        }
        
        if(sum==n){
            cout<<0<<endl;
        }
        else if(sum>n){

        
            sum=abs(sum)-n;
            cout<<sum<<endl;}
        else if(sum<n){
            cout<<1<<endl;
        }
            
        }




    }
